<?xml version="1.0" encoding="utf-8"?>

<!-- Coordinator Layout - координирующий макет (Frame Layout),
     для координации анимаций между разными представлениями,
     позволяет поведению одного представления влиять на поведение другого представления.
     Только для вложенной прокрутки. -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment">

    <!-- App Bar Layout - для работы с панелями приложений (Linear Layout),
         для возможности анимации панели инструментов-->
    <!-- Theme - стиль, применяемый ко всем предсавлениям макета панели приложений -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <!-- Collapsing Toolbar Layout - сворачиваемая панель инструментов (Frame Layout).
             Layout Height - максимальная высота сворачиваемой панели инструментов -->
        <!-- Layout Scroll Flags - указывает, как сворачиваемая панель инструментов
             должна реагировать на прокрутку.
             Scroll - представление прокручивается за верхний край экрана при прокрутке вверх.
             Exit Until Collapsed - сворачивается пока есть возможность для уменьшения -->
        <!-- Content Scrim - установка цвета фона свернутой панели инструментов -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorPrimary">

            <!-- Image View - изображение в сворачиваемой панели инструментов (Collapsing Toolbar). -->
            <!-- Layout Collapse Mode - режим сворачивания.
                 Parallax - параллакасная анимация, чтобы скорость прокрутки отличалась. -->
            <ImageView
                android:src="@drawable/restaurant"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"/>

            <!-- Material Toolbar - панель инструментов -->
            <!-- Layout Collapse Mode - режим сворачивания.
                 Pin - элементы, которые находятся на панели инструментов остаются на экране. -->
            <com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Nested Scroll View - представление вложенной прокрутки для прокрутки содержимого макета,
         может иметь только одного потомка (Frame Layout).-->
    <!-- Layout Behavior - указывает поведение представления.
         Appbar Scrolling View Behavior - размещено под макетом панели приложений и
         перемещает представления при прокрутке. -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Radio Group - группа переключателей с выбором одного элемента (Linear Layout). -->
        <RadioGroup
            android:id="@+id/pizza_group"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <!-- Radio Button - для определения каждого переключателя в группе (Compound Button). -->
            <!-- Compound Button - вид кнопки, которая имеет два состояния. -->
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_divolo"
                android:text="@string/diavolo" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radio_funghi"
                android:text="@string/funghi" />

        </RadioGroup>


        <!-- Chip Group - группа плашек, группа представлений
                          для размещения нескольких плашек со сходным значением.  -->
        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!-- Chip - плашка для выбора (Compound Button). -->
            <!-- Style - для изменения цвета при выборе. -->
            <!-- Entry - плашка ввода. -->
            <!-- Filter - плашка фильтрации данных. -->
            <!-- Action - плашка действия. -->
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/parmesan"
                android:text="@string/parmesan"
                style="@style/Widget.MaterialComponents.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chili_oil"
                android:text="@string/chili_oil"
                style="@style/Widget.MaterialComponents.Chip.Choice" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>