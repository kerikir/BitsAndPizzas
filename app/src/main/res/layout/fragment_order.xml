<?xml version="1.0" encoding="utf-8"?>

<!-- Coordinator Layout - координирующий макет (Frame Layout),
     для координации анимаций между разными представлениями,
     позволяет поведению одного представления влиять на поведение другого представления.-->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFragment">

    <!-- App Bar Layout - для работы с панелями приложений (Linear Layout),
         для возможности анимации панели инструментов-->
    <!-- Theme - стиль, применяемый ко всем предсавлениям макета панели приложений -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <!-- Material Toolbar - панель инструментов -->
        <!-- Layout Scroll Flags - указывает, как панель инструментов должна реагировать на прокрутку.
             Scroll - представление прокручивается за верхний край экрана при прокрутке вверх.
             Enter Always - быстро прокручивается вниз до своей исходной позиции. -->
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            app:layout_scrollFlags="scroll|enterAlways" />

    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>